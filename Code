function _init()
 x = 10
 y = 10
 a = 0

value = 1
end

function _update()
 if (btn(➡️)) x+= value
 if (btn(⬇️)) y+= value
 if (btn(⬅️)) x-= value
 if (btn(⬆️)) y-= value
 
 if (btn(4)) a-= value
 if (btn(5)) a+= value
end

function _draw()
 --pset(x,y)
 --print("☉",x,y,x)
 --cls()
 circfill(x,y,a,rnd(16))
 circ(x,y,x,y)
 spr(1,x,y)
end
