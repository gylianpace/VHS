function _update()
 if (btn(➡️)) x = x +1
 if (btn(⬇️)) y = y +1
 if (btn(⬅️)) x = x -1
 if (btn(⬆️)) y = y -1
 
 if (btn(4)) a = a-1
 if (btn(5)) a = a+1
 
 
--collision
 if (abs(p_x - i_x) < 8 and
  abs(p_y - i_y) < 8) then
   cls()
   i_x = rnd(128 - board)
   i_y = rnd(128 - board)
   i_draw = true



 
end
