function _init()
 x = 10
 y = 10
 
 a = 0
end

function _update()
 if (btn(➡️)) x = x +1
 if (btn(⬇️)) y = y +1
 if (btn(⬅️)) x = x -1
 if (btn(⬆️)) y = y -1
 
 if (btn(4)) a = a-1
 if (btn(5)) a = a+1
 
end


function _draw()
 --pset(x,y)
 --print("☉",x,y,x)
 --cls()
 --circ(x,y,a,rnd(16))
 
 spr(1,x,y    )
 
 
end
