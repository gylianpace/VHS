function anfang()
 --player
 px = 64
	py = 64
	pc = 10
	pspd = 2
	pspr = 1

 --item
 ix = 10
 iy = 10
 ic = 10
 ispr = 2
end
-->8
function steuerung()

--move
 if (btn(➡️)) px += pspd
 if (btn(⬇️)) py += pspd
 if (btn(⬅️)) px -= pspd
 if (btn(⬆️)) py -= pspd
 
 if (btn(❎)) pc += pspd
 if (btn(🅾️)) pc -= pspd
 
end
