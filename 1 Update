function _update()
--move player
 if (btn(➡️)) p_x += p_spd
 if (btn(⬇️)) p_y += p_spd
 if (btn(⬅️)) p_x -= p_spd
 if (btn(⬆️)) p_y -= p_spd
 
 if (btn(4)) a = a-1
 if (btn(5)) a = a+1


-- collision
 if (abs(p_x - i_x) < 8 and 
  abs(p_y - i_y)<8) then
	  cls()
	  i_x = rnd(120 - board)
	  i_y = rnd(120 - board)
	  i_draw = true
	  sfx(1)
	  board -= 7
	  score += 1
	   
 end
end
